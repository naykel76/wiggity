        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "nk_jtb": "^0.15.0",
        "postcss": "^8.5.6",
        "sass": "^1.90.0",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.4"
    }
}
